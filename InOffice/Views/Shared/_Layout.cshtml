<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="display-table">
        <div class="row display-table-row">
            <div class="col-md-2 col-sm-2" id="navigation">
                <div class="logo-field">
                    <img class="lg-logo" src="~/Assets/Logo LG.png" />
                </div>
                <div class="navi">
                    <ul>
                        <li>@Html.ActionLink("Dashboard", "Index", "Home")</li>
                        <li>@Html.ActionLink("Job description", "About", "Home")</li>
                        <li>@Html.ActionLink("Manpower", "Contact", "Home")</li>
                        <li>@Html.ActionLink("Setup", "Contact", "Home")</li>
                    </ul>
                </div>
            </div>
            <div class="col-sm-10 no-space">
                <header class="header">
                    <div class="col-md-7">
                        <div class="search hidden-xs hidden-sm">
                            <h3>@ViewBag.Title</h3>
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="header-rightside">
                            <ul class="list-inline header-top pull-right">
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                        <span>Matheus Lira</span>
                                        <b class="caret"></b></a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <div class="navbar-content">
                                                <span>Matheus Lira</span>
                                                <p class="text-muted small">
                                                    matheusde.souza@lgepartner.com
                                                </p>
                                                <div class="divider">
                                                </div>
                                                <a href="#" class="view btn-sm active">Logout</a>
                                            </div>
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </div>
                </header>
                <div class="user-interaction">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
